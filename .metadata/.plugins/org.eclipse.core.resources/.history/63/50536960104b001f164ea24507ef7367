version: '3.8'

services:
  app:
    image: hotel-reservation
    container_name: hotel-reservation-container
    ports:
      - "8081:8080"
    environment:
      - SPRING_DATASOURCE_URL=jdbc:h2:mem:testdb;DB_CLOSE_DELAY=-1;DB_CLOSE_ON_EXIT=FALSE
      - SPRING_DATASOURCE_USERNAME=sa
      - SPRING_DATASOURCE_PASSWORD=password
      - SPRING_H2_CONSOLE_ENABLED=true
      - SPRING_H2_CONSOLE_PATH=/h2-console
    depends_on:
      - db
    networks:
      - hotel-reservation-network

  db:
    image: oscarfonts/h2
    container_name: h2-db
    ports:
      - "1521:1521"
      - "81:81"
    environment:
      - H2_OPTIONS=-tcp -tcpAllowOthers -web -webAllowOthers -webPort 81
    networks:
      - hotel-reservation-network

networks:
  hotel-reservation-network:
    driver: bridge
