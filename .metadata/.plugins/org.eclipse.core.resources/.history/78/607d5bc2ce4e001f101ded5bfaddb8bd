version: '3.9'

services:
  postgres:
    image: postgres:latest
    container_name: hotel-reservation-postgres-db-1
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: postgres
      POSTGRES_DB: hotel_reservation_db
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data

  api:
    image: hotel-reservation
    container_name: hotel-reservation-api
    ports:
      - "8080:8080"
    depends_on:
      - postgres

volumes:
  postgres_data:
