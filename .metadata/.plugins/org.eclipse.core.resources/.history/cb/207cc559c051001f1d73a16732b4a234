version: '3.8'
services:
  postgres:
    image: postgres:latest
	container-name: hotel-reservation-postgres-db-1
    environment:
      POSTGRES_DB: hotel_db
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: postgres
    ports:
      - "5432:5432"
    volumes:
      - postgres-data:/var/lib/postgresql/data
	  
    api :
     image: hotel-reservation
	 container_name: hotel-reservation-api
     depends_on:
      - postgres-db
    ports:
      - "8080:8080"
     
volumes:
  postgres-data:
